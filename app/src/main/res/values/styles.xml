<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#7fffffff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextViewRobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextViewRobotoRegular">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextViewRobotoBoldRegular">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewRoboto">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>
